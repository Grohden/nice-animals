<resources>


    <!-- Base application theme. -->
    <style name="Base.Theme.NiceAnimals" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="Theme.NiceAnimals" parent="Base.Theme.NiceAnimals" />

    <style name="Theme.NiceAnimals.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.NiceAnimals.NoActionBar.Immersive" parent="Theme.NiceAnimals.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.NiceAnimals.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
</resources>
